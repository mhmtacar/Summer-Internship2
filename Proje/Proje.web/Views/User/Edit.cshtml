@model User

<form method="post" asp-action="Edit">
    <h1>Kullanıcı Kayıt</h1>


    <div class="girisalani">
        <label asp-for="Username"></label>
        <input asp-for="Username" />
        <span asp-validation-for="Username"></span>

    </div>
    <div class="girisalani">
        <label asp-for="Password"></label>
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>

    </div>

    <div class="girisalani">
        <label asp-for="Email"></label>
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <button type="submit" class="kaydetmeButonu">Kaydet</button>
    <button type="reset" class="kaydetmeButonu">Reset</button>

    <a asp-controller="User" asp-action="Index">Listeye geri dön</a>
</form>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }